<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Позитивный эффект от самоудовлетворения -->
  <ThoughtDef>
    <defName>SelfRelief_Satisfied</defName>
    <workerClass>ThoughtWorker_Always</workerClass>
    <validWhile>
      <li>
        <li Class="Hediff">
          <def>SelfRelief_Status</def>
        </li>
      </li>
    </validWhile>
    <stages>
      <li>
        <label>self-relief satisfaction</label>
        <description>I took care of my own needs. It helps with the urges, though it's not the same as being with someone.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
    <stackLimit>1</stackLimit>
  </ThoughtDef>

  <!-- Хедифф для статуса самоудовлетворения -->
  <HediffDef>
    <defName>SelfRelief_Status</defName>
    <label>self-relief status</label>
    <description>Recently engaged in self-relief. This helps manage physical needs but doesn't replace genuine intimacy.</description>
    <hediffClass>Hediff</hediffClass>
    <defaultLabelColor>(0.7, 0.9, 0.7)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <isBad>false</isBad>
    <visible>false</visible>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.02</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>180000</disappearsAfterTicks><!-- 3 hours -->
      </li>
    </comps>
  </HediffDef>

  <!-- Модификатор потребности в lovin через хедифф -->
  <HediffDef>
    <defName>SelfRelief_LovinNeedModifier</defName>
    <label>lovin need relief</label>
    <description>Self-relief has temporarily reduced the urgency of lovin needs.</description>
    <hediffClass>Hediff</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.9)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <isBad>false</isBad>
    <visible>false</visible>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>240000</disappearsAfterTicks><!-- 4 hours -->
      </li>
    </comps>
  </HediffDef>
</Defs>